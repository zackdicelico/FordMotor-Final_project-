import java.io.File;  // Import the File class
import java.io.IOException;  // Import the IOException class to handle errors

public class ReadWrite{


  private class simpReadWrite{

    /*
        createFile: Create a new file named based on the parameter (String fileName)
    */
    public void createFile(String fileName){
        
      /*
          Using IOException to create a file, with throw error in the event of a complication...
      */

      try {
        File myFile = new File(fileName + ".txt");
        if (myFile.createNewFile()) {
          System.out.println("File created: " + myFile.getName()); // To print new file name
        } else {
          System.out.println("File already exists."); // To print if it was previously created
        }
  
      // EXCEPTION 
      } catch (IOException errorMess) {
        System.out.println("ERROR in file creation...");
        errorMess.printStackTrace();
      }
  
    }
  
